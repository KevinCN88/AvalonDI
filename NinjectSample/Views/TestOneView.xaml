<Window x:Class="NinjectSample.Views.TestOneView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjectSample.Views" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="TestOneView" Height="300" Width="434.194">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Button 
                Content="GetData"
                Command="{Binding CmdGet}"/>
            <Button 
                Content="UpdateSelected"
                Command="{Binding CmdUpdate}"/>
            <Button 
                Content="DeleteSelected"
                Command="{Binding CmdDelete}"/>
        </WrapPanel>
        <DataGrid 
            IsReadOnly="True"
            CanUserAddRows="False"
            ItemsSource="{Binding DataList}"
            SelectedItem="{Binding SelectedData}"/>
    </DockPanel>
</Window>
